# toggle language
bindsym $mod+shift+space exec ~/.zsh/toggle_language.zsh

# resize window (you can also use the mouse for that)
set $window-resize-amount 50px
mode "resize" {
# These bindings trigger as soon as you enter the resize mode

# Pressing left will shrink the window’s width.
# Pressing right will grow the window’s width.
# Pressing up will shrink the window’s height.
# Pressing down will grow the window’s height.
    bindsym h resize shrink width $window-resize-amount or 1 ppt
    bindsym k resize shrink height $window-resize-amount or 1 ppt
    bindsym l resize grow width $window-resize-amount or 1 ppt
    bindsym j resize grow height $window-resize-amount or 1 ppt

# same bindings, but for the arrow keys
    bindsym Left resize shrink width $window-resize-amount or 1 ppt
    bindsym Down resize grow height $window-resize-amount or 1 ppt
    bindsym Up resize shrink height $window-resize-amount or 1 ppt
    bindsym Right resize grow width $window-resize-amount or 1 ppt

# back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

bindsym $mod+Shift+Control+h resize shrink width $window-resize-amount or 1 ppt
bindsym $mod+Shift+Control+k resize shrink height $window-resize-amount or 1 ppt
bindsym $mod+Shift+Control+l resize grow width $window-resize-amount or 1 ppt
bindsym $mod+Shift+Control+j resize grow height $window-resize-amount or 1 ppt
bindsym $mod+Shift+Control+Left resize shrink width $window-resize-amount or 1 ppt
bindsym $mod+Shift+Control+Up resize shrink height $window-resize-amount or 1 ppt
bindsym $mod+Shift+Control+Right resize grow width $window-resize-amount or 1 ppt
bindsym $mod+Shift+Control+Down resize grow height $window-resize-amount or 1 ppt

