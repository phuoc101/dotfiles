alias vim="nvim"
alias vimc="nvim --clean"
alias viml="nvim +'colorscheme github_light'"
alias open="xdg-open"
alias ls="exa --icons -s extension -l"
alias lsa="ls -al"
alias tree="ls -T"
# open text file in nvim
alias nnn="nnn -ed"
alias cat="bat -p"
alias du="dust"
alias lg="lazygit"
alias cp="cp -iv"
alias mv="mv -iv"
alias fd="fdfind"
alias battery='upower -i /org/freedesktop/UPower/devices/battery_BAT0| grep -E "state|to\ full|percentage"'
alias z="zshz"
alias gundamfetch="neofetch --ascii ~/dotfiles/custom_ascii/gundam_barbatos"
which_term() {
    basename "/"$(ps -o cmd -f -p $(cat /proc/$(echo $$)/stat | cut -d \  -f 4) | tail -1 | sed 's/ .*$//')
}
if [ $(which_term) == "kitty" ]
then
    alias ssh="kitten ssh"
fi
